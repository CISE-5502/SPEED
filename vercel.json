{
  "version": 2,
  "builds": [
    {
      "src": "frontend",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/.next" }
    },
    {
      "src": "backend/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/main.ts" },
    { "src": "/(.*)", "dest": "frontend/.next/$1" }
  ]
}
